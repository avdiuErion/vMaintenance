
  <div class="table-responsive">
    <div class="table-wrapper">
      <div class="table-title">
        <div class="row">
          <div class="col-sm-8">
            <h2>Automjetet</h2>
          </div>
          <div class="col-sm-4 add-button">
            <a href="vehicles/add-vehicle">
              <button type="button" class="btn btn-primary">Shto</button>
            </a>
          </div>
        </div>
      </div>
      <table class="table table-striped table-hover table-bordered mainTable">
        <thead>
          <tr>
            <th>#</th>
            <th>Modeli</th>
            <th>Regjistrimi</th>
            <th>Kilometrat</th>
            <th>Veprimet</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach((element, index)=> { %>
            <tr>
              <th scope="row">
                <%= index+1 %>
              </th>
              <td>
                <%= element.model %>
              </td>
              <td>
                <%= element.licensePlates %>
              </td>
              <td>
                <%= element.kilometres %>
              </td>
              <td>
                <a href="services/GetByVehicleId/<%= element._id %>" class="edit" title="Servisimet"
                  data-toggle="tooltip"><i class="material-icons" style="color: green;">&#xf049;</i></a>
                <a href="maintenances/byVId/<%= element._id %>" class="edit" title="MirÃ«mbajtjet" data-toggle="tooltip"><i
                    class="material-icons" style="color: bluegreen;">&#xea56;</i></a>
                <a href="vehicles/update-vehicle/<%= element._id %>" class="edit" title="Edito" data-toggle="tooltip"><i
                    class="material-icons">&#xE254;</i></a>
                  <a href="#" class="delete" onclick="myFunction('<%= element._id %>')" title="Fshij" data-toggle="tooltip"
                    data-id="<%= element._id %>"><i class="material-icons" style="color: red;">&#xE872;</i></a>
              </td>
            </tr>
            <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  function myFunction(elementId) {
    if (confirm('A jeni i sigurte qe doni te fshini automjetin?')) {
    $.ajax({
            url:'/vehicles/' + elementId,
            type:"DELETE",
            success: function(response) {
              window.location.href = '/vehicles';
            }
        });
      }
  }
</script>